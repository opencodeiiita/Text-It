<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Activity.LoginUser">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:text="Login"
        android:textSize="28sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle"
        android:layout_marginTop="200dp"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextEmail"
        android:layout_marginTop="16dp"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextPassword"
        android:layout_marginTop="24dp"
        android:text="Login" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="OR"
        android:textSize="28sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonLogin"
        android:layout_marginTop="50dp"
        android:text="Register" />

    <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf = "parent"
        app:layout_constriantEnd_toEndOf = "parent"
        app:layout_constraintHorizontal_bias = "0.0"
        android:layout_marginTop="620dp"
        >
        <ScrollView android:id="@+id/bottom_nav_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <RelativeLayout android:id="@+id/content_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >



                <RelativeLayout android:id="@+id/page_bottom_nav_bar_ek1"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <View   android:id="@+id/_bg__bottom_nav_bar_ek2"
                        android:background="@drawable/_bg__bottom_nav_bar_ek2_shape"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_width="375dp"
                        android:layout_height="90dp" />

                    <View   android:id="@+id/rectangle_1"
                        android:background="@drawable/rectangle_1_shape"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_width="375dp"
                        android:layout_height="90dp" />


                    <RelativeLayout android:id="@+id/frame_1"
                        android:layout_marginTop="49dp"
                        android:layout_marginStart="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >


                        <TextView android:id="@+id/message"
                            android:textSize="16sp"
                            android:textColor="@color/message_color"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_width="84.6dp"
                            android:layout_height="23.6dp"
                            android:text="@string/message_string"
                            />

                        <TextView android:id="@+id/calls"
                            android:textSize="16sp"
                            android:textColor="@color/_bg__frame_1_ek1_color"
                            android:layout_marginLeft="101.33dp"
                            android:layout_marginTop="0dp"
                            android:layout_width="52.6dp"
                            android:layout_height="23.6dp"
                            android:text="@string/calls_string"
                            />

                        <TextView android:id="@+id/contacts"
                            android:textSize="16sp"
                            android:textColor="@color/_bg__frame_1_ek1_color"
                            android:layout_marginLeft="170.67dp"
                            android:layout_marginTop="0dp"
                            android:layout_width="84.6dp"
                            android:layout_height="23.6dp"
                            android:text="@string/contacts_string"
                            />

                        <TextView android:id="@+id/settings"
                            android:textSize="16sp"
                            android:textColor="@color/_bg__frame_1_ek1_color"
                            android:layout_marginLeft="272dp"
                            android:layout_marginTop="0dp"
                            android:layout_width="78.6dp"
                            android:layout_height="23.6dp"
                            android:text="@string/settings_string"
                            />

                    </RelativeLayout>

                    <ImageView android:id="@+id/message_ek1"
                        android:src="@drawable/message_ek1"
                        android:contentDescription="message_ek1"
                        android:layout_marginStart="42dp"
                        android:layout_marginTop="17dp"
                        android:layout_width="22dp"
                        android:layout_height="22dp" />

                    <ImageView android:id="@+id/phone"
                        android:src="@drawable/phone"
                        android:contentDescription="phone"
                        android:layout_marginStart="126.11dp"
                        android:layout_marginTop="17dp"
                        android:layout_width="22dp"
                        android:layout_height="22dp" />

                    <ImageView android:id="@+id/contacts_ek1"
                        android:src="@drawable/contacts_ek1"
                        android:contentDescription="contacts_ek1"
                        android:layout_marginStart="213.93dp"
                        android:layout_marginTop="17.37dp"
                        android:layout_width="21.26dp"
                        android:layout_height="21.25dp" />

                    <ImageView android:id="@+id/settings_ek1"
                        android:src="@drawable/settings_ek1"
                        android:contentDescription="settings_ek1"
                        android:layout_marginStart="307.7dp"
                        android:layout_marginTop="16.7dp"
                        android:layout_width="22.6dp"
                        android:layout_height="22.6dp" />

                </RelativeLayout>
            </RelativeLayout>

        </ScrollView>
    </HorizontalScrollView>

</RelativeLayout>